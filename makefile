###############################################################################
# makefile
###############################################################################

TEX = $(wildcard *.tex)
TMP = $(TEX:.tex=.aux) $(TEX:.tex=.bbl) $(TEX:.tex=.blg) $(TEX:.tex=.fdb_latexmk) $(TEX:.tex=.fls) $(TEX:.tex=.log) $(TEX:.tex=.out) $(TEX:.tex=.spl)
PDF = $(TEX:.tex=.pdf)

###############################################################################

all: $(PDF)

auto: $(TEX)
	latexmk -pdf -pvc $(basename $<)

clean:
	-latexmk -C
	-rm -fv $(TMP)

###############################################################################

%.pdf: %.bib %.tex
	latexmk -pdf $*

###############################################################################

